<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appenders>
        <!--控制台的配置 -->
        <Console name="Console" target="SYSTEM_OUT">
            <ThresholdFilter level="debug" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout pattern="%d{HH:mm:ss,SSS} %-5level %class{36} %L %M - %msg%xEx%n"/>
        </Console>

        <File name="latest" fileName="/logs/latest.log" append="false">
            <ThresholdFilter level="info" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout pattern="%d{YYYY-MM-dd HH:mm:ss,SSS Z} %-5level %class{36} %L %M - %msg%xEx%n"/>
        </File>

        <File name="info" fileName="/logs/info.log">
            <ThresholdFilter level="info" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout pattern="%d{YYYY-MM-dd HH:mm:ss,SSS Z} %-5level %class{36} %L %M - %msg%xEx%n"/>
        </File>

        <!--<RollingFile name="RollingFile" fileName="/logs/rolling.log" filePattern="logs/$${date:yyyy-MM}/web-%d{MM-dd-yyyy}-%i.log.gz">-->
        <!--<PatternLayout pattern="%d{yyyy-MM-dd 'at' HH:mm:ss z} %-5level %class{36} %L %M - %msg%xEx%n"/>-->
        <!--<SizeBasedTriggeringPolicy size="2MB"/>-->
        <!--</RollingFile>-->
    </appenders>

    <loggers>
        <logger name="kls" level="all">
            <appender-ref ref="info"/>
            <appender-ref ref="latest"/>
        </logger>
    </loggers>
</configuration>
